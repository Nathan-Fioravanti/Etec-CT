    <!--Link-CSS-->
    <link rel="stylesheet" href="./CSS/cadastro/header.css">
    <link rel="stylesheet" href="./CSS/cadastro/main.css">
    <link rel="stylesheet" href="./CSS/cadastro/footer.css">
    <!--Link-CSS_BOOTSTRAP-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


    <!--HEADER-->
    <header>
        <div class="container1">
            
            <h1 id="textoHall"> <img src="./IMG/LogoMuseu.png" alt="" style="height: 90px; margin-right: 700px;"> Hall dos Heróis</h1>
        </div>
    </header>

    <main>
    <div>
        <h2 style="margin-bottom: 300px; margin-left: 600px;"><img src="./IMG/cadastre-se.png" alt=""></h2>
    </div>
    <div class="container" style="width: 700px;">
        <form id="registrationForm" method="POST" action="/cadastro">
            <div class="mb-3">
                <label for="username" class="form-label">*️⃣ Nome do usuário:</label>
                <input type="text" class="form-control" name="username" id="username" placeholder="" style="background-color: #D9D9D9;" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">*️⃣ Gmail do usuário:</label>
                <input type="email" class="form-control" name="email" id="email" placeholder="" style="background-color: #D9D9D9;" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">*️⃣ Senha do usuário:</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="" style="background-color: #D9D9D9;" required>
            </div>
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">*️⃣ Confirmando senha:</label>
                <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="" style="background-color: #D9D9D9;" required>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit">Criar conta</button>
            </div>
        </form>

        {{#if success}}
            <script>
                alert("{{success}}");
            </script>
        {{/if}}

        {{#if error}}
            <script>
                alert("{{error}}");
            </script>
        {{/if}}

        <div class="d-grid gap-2 d-md-flex justify-content-md-end" style="margin-top: 20px;">
            <a href="/" class="btn btn-secondary">Criar Conta</a>
        </div>
    </div>
</main>

